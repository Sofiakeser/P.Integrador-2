<header class="main-header">
    <div class="container">
        <div class="row align-items-center">


            <h1><a href="/">Rueda<span class="libre">Libre</span></a></h1>

            <div class="col-7 col-md-6">
                <form action="/searchR" method="GET" class="search-form">  <!-- CHECKEAR CUANDO HAGAMOS RUTAS -->
                    <input type="text" name="search" placeholder="Buscar productos, marcas y más" class="search-form_input">
                    <button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
                </form>
            </div>

            <div class="col-12 col-md-4">
                <a class="main-header_credit-link">
                    <i class="fas fa-hand-holding-usd"></i>
                    Todas las opiniones en un solo lugar.
                </a>
            </div>
        </div>

        <button class="btn-toggle-navbar">
            <i class="fas fa-bars"></i>
        </button>

        <nav class="main-navbar">
            <ul class="left-navbar">
                <li><a href="/">Todos los productos</a></li>
                <li><a href="/product-add">Cargar productos</a></li>
            </ul>

<!-- para cuando esta logueado -->
            <% if (locals.userLogueado != undefined) { %>
                   
                <h2>Bienvenido: <%= userLogueado.usuario %>!</h2>  <!-- le saue el locals -->
                <ul class="right-navbar"></ul>
                    <li>
                        <form action="/profile/logout" method="POST"> 
                            <button class="logout" type="submit">
                                Cerrar sesión <i class="fas fa-sign-in-alt"></i>
                            </button>
                        </form>
                    </li>
    
                    <li><a href="/profile"> Mi Perfil <i class="fas fa-user"></i></a>
                    </li>
                </ul>
 
            <% } else  { %>
                <!-- para cuando el usuario NO está logueado -->

                <ul>
                    <li>
                        <a href="/profile/register" class ="textos" >Creá tu cuenta <i class="far fa-address-card"></i>  <!-- SE PONE /REGISTER PORQUE ASI ES COMO LO TENEMOS EN LAS RUTAS --></a>
                    </li>
                    <li><a href="/profile/login" class ="textos" >Ingresá <i class="fas fa-sign-in-alt"></i></a>
                    </li>
                </ul>
            <% } %>
            
        </nav>
    </div>
</header> 